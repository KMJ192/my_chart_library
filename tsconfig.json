{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@react/*": ["custom_modules/react/*"],
      "@router/*": ["custom_modules/router/*"],
      "@api/*": ["custom_modules/api/*"],
      "@redux/*": ["custom_modules/redux/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules"],
  "include": [".", "src/**/*", "./types", "declaration.d.ts", "global.d.ts"]
}
